<% include ./partials/header %>
<h1>
  <a href="">Candy Shoppe</a>
</h1>
<hr>
<div class="container">
  <iframe width="640" height="390" src="<%= link[Math.floor(Math.random() * link.length)] %>?autoplay=0" frameborder="0"></iframe>
  <% if(candies) { %>
    <% for(var i=0; i< candies.length; i++) {  %>
      <ul>
        <li><b>Name : </b> <%- link_to(candies[i].name, '/candies/' + candies[i]._id ) %></li>
        <li><b>Color : </b> <%= candies[i].color %></li>
      </ul>
    <% } %>
  <% } %>
</div>

<% include ./candy/form %>
